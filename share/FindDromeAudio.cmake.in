find_path(
	DROMEAUDIO_INCLUDE_DIR
	DromeAudio/Sound.h
	@CMAKE_INSTALL_PREFIX@/include
)

find_library(
	DROMEAUDIO_LIBRARY
	NAMES DromeAudio
	PATHS
	@CMAKE_INSTALL_PREFIX@/include
)

if(DROMEAUDIO_INCLUDE_DIR AND DROMEAUDIO_LIBRARY)
	set(DROMEAUDIO_FOUND "YES")
else(DROMEAUDIO_INCLUDE_DIR AND DROMEAUDIO_LIBRARY)
	set(DROMEAUDIO_FOUND "NO")
endif(DROMEAUDIO_INCLUDE_DIR AND DROMEAUDIO_LIBRARY)

if(DROMEAUDIO_FOUND)
	message(STATUS "Found DromeAudio: ${DROMEAUDIO_LIBRARY}")
else(DROMEAUDIO_FOUND)
	message(STATUS "Could not find DromeAudio")
endif(DROMEAUDIO_FOUND)
